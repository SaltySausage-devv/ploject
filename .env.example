# Root .env file for backend services
# Copy this file to .env and fill in your actual values
# All services load from this root .env file

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration (Required)
JWT_SECRET=your_jwt_secret_key

# Frontend URL (Required)
FRONTEND_URL=http://localhost:3000

# Service URLs (Optional - defaults to localhost)
MESSAGING_SERVICE_URL=http://localhost:3005
NOTIFICATIONS_SERVICE_URL=http://localhost:3007

# Twilio Configuration (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google APIs (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration (Optional - for notifications service)
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@tutorconnect.sg

